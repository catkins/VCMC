{
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "make",
      "args": [
        "all"
      ]
    },
    {
      "label": "Clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "make",
      "args": [
        "clean"
      ]
    },
    {
      "label": "Upload (teensy.exe)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "make",
      "args": [
        "upload",
        "",
        ""
      ]
    },
    {
      "label": "Upload (TyCommander)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "make",
      "args": [
        "uploadTy",
        "",
        ""
      ]
    }
  ],
  "version": "2.0.0",

  "problemMatcher": "$gcc",
  "presentation": {
    "revealProblems": "onProblem",
    "reveal": "silent",
    "echo": true,
    "clear": true,
    "focus": false,
    "panel": "shared",
    "showReuseMessage": false
  }
}
